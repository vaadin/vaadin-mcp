{
  "name": "vaadin-mcp",
  "version": "0.8.0",
  "description": "MCP server for Vaadin documentation with document-based search and full document retrieval",

  "type": "module",

  "scripts": {
    "build": "tsc && cp src/tools/landing-page/content.html dist/tools/landing-page/",

    "start": "bun run src/index.ts",
    "start:prod": "bun run dist/index.js",
    "test": "bun run src/test-scenarios.test.ts --verbose",
    "test:hierarchical": "bun run src/test-scenarios.test.ts --verbose",
    "test:component-api": "bun run src/component-api-tools.test.ts",
    "test:all": "bun run src/component-api-tools.test.ts && bun run src/test-scenarios.test.ts --verbose"
  },
  "keywords": [
    "vaadin",
    "documentation",
    "mcp",
    "model-context-protocol",
    "hierarchical",
    "parent-child",
    "navigation",
    "semantic-search",
    "rag",
    "ide-assistant"
  ],
  "author": "Vaadin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vaadin/vaadin-documentation-services",
    "directory": "packages/mcp-server"
  },
  "homepage": "https://github.com/vaadin/vaadin-documentation-services/tree/main/packages/mcp-server",
  "bugs": {
    "url": "https://github.com/vaadin/vaadin-documentation-services/issues"
  },
  "dependencies": {
    "@amplitude/analytics-node": "^1.5.22",
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@langchain/community": "0.3.48",
    "@langchain/core": "0.3.66",
    "@langchain/openai": "^0.3.0",
    "@langchain/pinecone": "^0.1.0",
    "@pinecone-database/pinecone": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "langchain": "0.3.30",
    "openai": "^4.86.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^22.13.8",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.8.2"
  }
}
